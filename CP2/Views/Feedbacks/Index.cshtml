@model IEnumerable<CP2.Models.Feedback>

@{
    ViewData["Title"] = "Listagem";
}

<h1>Listagem</h1>

<p>
    <a asp-action="Create"class="btn btn-primary btn-sm">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authorized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authorized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.produto.Nome)
            </td>
            <td>

                    <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn btn-secondary btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn btn-secondary btn-sm">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.FeedbackId" class="btn btn-secondary btn-sm">Deletar</a>
                   
            </td>
        </tr>
}
    </tbody>
</table>
