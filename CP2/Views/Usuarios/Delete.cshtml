@model CP2.Models.Usuario

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar este Usuário?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.senha)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.senha)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.telefone)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.telefone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UsuarioId" />
        <input type="submit" value="Deletar" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar a Listagem</a>
    </form>
</div>
